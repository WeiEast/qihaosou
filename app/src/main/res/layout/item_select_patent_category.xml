<?xml version="1.0" encoding="utf-8"?>
<com.qihaosou.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/base_text_color"
        android:id="@+id/tv_addsenior_search"
        android:paddingLeft="20.0dip"
        android:paddingTop="20.0dip"
        android:paddingBottom="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5.0dip" />

    <CheckBox
        android:id="@+id/cb_addsenior_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20.0dip"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/checkbox_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <View
        android:id="@+id/v_history_divider"
        android:background="#ffdbdbdb"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20.0dip"
        android:layout_alignParentBottom="true" />

</com.qihaosou.view.CheckableRelativeLayout>