<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/usercenter_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        />
    <LinearLayout
        android:layout_toLeftOf="@id/right_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/tv_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/base_text_color"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_check_no"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/gray_text_color"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_website_name"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/light_text_color"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_check_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/font_size_12"
            />
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        style="@style/MyHorizontalDividerLine"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>