<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_iname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/base_text_color"
                />
            <View
                style="@style/MyHorizontalDividerLine"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/font_size_16"
                            android:textColor="@color/base_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/idcard_number" />
                        <TextView
                            android:id="@+id/tv_cardnum"
                            android:textSize="@dimen/font_size_14"
                            android:textColor="@color/light_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11.0dip" />
                    </LinearLayout>
                    <View
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        style="@style/MyVerticalDividerLine" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/font_size_16"
                            android:textColor="@color/base_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legal_person" />
                        <TextView
                            android:id="@+id/tv_legal_person"
                            android:textSize="@dimen/font_size_14"
                            android:textColor="@color/light_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11.0dip" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/font_size_16"
                        android:textColor="@color/base_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/province" />
                    <TextView
                        android:id="@+id/tv_areaname"
                        android:textSize="@dimen/font_size_14"
                        android:textColor="@color/light_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.0dip" />
                </LinearLayout>
            </LinearLayout>
            <View
                style="@style/MyHorizontalDividerLine"/>
            <View
                android:layout_marginTop="10dp"
                style="@style/MyHorizontalDividerLine"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/execution_doc_number" />
                <TextView
                    android:id="@+id/tv_gist_number"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_court" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_gist_court"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_date" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_reg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_department" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_gist_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_status" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
            </LinearLayout>
            <View
                android:layout_marginTop="11.0dip"
                style="@style/MyHorizontalDividerLine" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/execution_final_duty" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_duty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_desc" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_disrupt_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
                <TextView
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/base_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/execution_publish_date" />
                <TextView
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/light_text_color"
                    android:id="@+id/tv_publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.0dip" />
            </LinearLayout>
            <View
                android:layout_marginBottom="11.0dip"
                style="@style/MyHorizontalDividerLine" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>