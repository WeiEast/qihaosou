<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ActivityTheme" mce_bogus="1" parent="@style/AppTheme">

        <item name="android:windowAnimationStyle">@style/anim_activity</item>
    </style>
    <!--Activity转场动画-->
    <style name="anim_activity" mce_bogus="1" parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>

        <item name="android:activityOpenExitAnimation">@anim/left_out</item>

        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>

        <item name="android:activityCloseExitAnimation">@anim/right_out</item>

    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否为全屏 -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowNoTitle">true</item>
        <!-- 对话框是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否浮在下层窗体之上-->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否显示壁纸 -->
        <item name="android:windowShowWallpaper">false</item>
        <!-- 设置窗体内容背景 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否允许背景灰暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--  是否再点击外部可关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 设置动画，注意是style -->
        <item name="android:windowAnimationStyle">@style/dialogAnim</item>
    </style>
    <!-- 对话框动画-->
    <style name="dialogAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>
    <!--横向分割线-->
    <style name="MyHorizontalDividerLine">
        <item name="android:background">@color/border_bg_color</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--竖线分割线-->
    <style name="MyVerticalDividerLine">
        <item name="android:background">@color/border_bg_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>
    <!--工商信息页style-->
    <style name="industry_info_style">
        <item name="android:background">@drawable/bg_border_layout</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
